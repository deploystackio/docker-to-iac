{
  "library/mariadb": {
    "versions": {
      "*": {
        "environment": {
          "MYSQL_ROOT_PASSWORD": {
            "type": "password",
            "length": 16
          },
          "MYSQL_USER": {
            "type": "string",
            "length": 8,
            "pattern": "lowercase"
          },
          "MYSQL_PASSWORD": {
            "type": "password",
            "length": 16
          },
          "MYSQL_DATABASE": {
            "type": "string",
            "length": 12,
            "pattern": "lowercase"
          }
        }
      }
    }
  }
}
